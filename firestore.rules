rules_version = '2';
service cloud.firestore {

 match /databases/{database}/documents/boards {
    match /{document=**} {
      allow read: if true;
      allow create: if request.auth.uid != null 
      && (!('board_ids' in get(/databases/$(database)/documents/accounts/$(request.auth.uid)).data)
      || get(/databases/$(database)/documents/accounts/$(request.auth.uid)).data.board_ids.size() < 3
      );
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.creator;
    }
  }
  
  match /databases/{database}/documents/accounts {
    match /{document=**} {
    	allow create, read: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.id;
    }
  }
  
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
  }
}